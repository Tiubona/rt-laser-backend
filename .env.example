# BACKEND BÁSICO
PORT=3001
NODE_ENV=development

# CHATGURU – integração
CHATGURU_API_BASE_URL=https://api.chatguru.com.br   # ou a base que sua conta usar
CHATGURU_API_TOKEN=SEU_TOKEN_AQUI

CHATGURU_API_ENABLED=true

# PRIMEIRO TESTE: modo laboratório → NÃO enviar automático ainda
CHATGURU_AUTO_SEND_ENABLED=false

# ROBÔ
ROBOT_ENABLED=true
ROBOT_ATENDIMENTO_MODE=MISTO
ROBOT_HORARIO_INICIO=08:00
